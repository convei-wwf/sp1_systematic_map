Title = {CA Apllied to Spatial Simulating Models in (LULUC) Multi-Temporals Images.},
Booktitle = {INTERNATIONAL PROCEEDINGS ON CELLULAR AUTOMATA MODELING FOR URBAN AND SPATIAL SYSTEM, CAMUSS 2012},
Year = {2012},

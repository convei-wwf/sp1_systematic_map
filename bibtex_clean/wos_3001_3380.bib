Title = {Pushing standardisation of GNSS-based Location Systems to support Terrestrial Applications development},
Booktitle = {PROCEEDINGS OF THE 26TH INTERNATIONAL TECHNICAL MEETING OF THE SATELLITE DIVISION OF THE INSTITUTE OF NAVIGATION (ION GNSS 2013)},
Series = {Institute of Navigation Satellite Division Proceedings of the International Technical Meeting},

@article{ WOS:000525730200001,
Author = {Petterson, Michael and Wangchuk, Sonam and Konchok, Norgay},
Title = {A multiple natural hazard analysis, SECMOL College region, near Leh, Ladakh, North India, with applications for community-based DRR},

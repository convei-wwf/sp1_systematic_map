@article{ WOS:001055521900001,
Author = {Chen, Chao and Wang, Liyan and Yang, Gang and Sun, Weiwei and Song, Yongze},
Title = {Mapping of Ecological Environment Based on Google Earth Engine Cloud Computing Platform and Landsat Long-Term Data: A Case Study of the Zhoushan Archipelago},

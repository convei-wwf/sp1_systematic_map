@article{ WOS:000335342400012,
Author = {Buczak, Anna L. and Baugher, Benjamin and Babin, Steven M. and Ramac-Thomas, Liane C. and Guven, Erhan and Elbert, Yevgeniy and Koshute, Phillip T. and Velasco, John Mark S. and Roque, Jr., Vito G. and Tayag, Enrique A. and Yoon, In-Kyu and Lewis, Sheri H.},
Title = {Prediction of High Incidence of Dengue in the Philippines},

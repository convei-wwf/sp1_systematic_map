@article{ WOS:000528229300001,
Author = {Van de Kerk, Madelon and Arthur, Stephen and Bertram, Mark and Borg, Bridget and Herriges, Jim and Lawler, James and Mangipane, Buck and Koizumi, Catherine Lambert and Wendling, Brad and Prugh, Laura},
Title = {Environmental Influences on Dall's Sheep Survival},
Journal = {JOURNAL OF WILDLIFE MANAGEMENT},

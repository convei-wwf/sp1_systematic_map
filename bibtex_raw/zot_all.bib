@article{alawad_ValueInformation_2022,
  title = {Value of {{Information}} in {{Wireless Sensor Network Applications}} and the {{IoT}}: {{A Review}}},
  shorttitle = {Value of {{Information}} in {{Wireless Sensor Network Applications}} and the {{IoT}}},
  author = {Alawad, Faiga and Kraemer, Frank Alexander},

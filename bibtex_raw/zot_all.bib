@article{bernknopf_ValueInformation_2018,
  title = {A {{Value}} of {{Information}} Impact Assessment: {{The}} Cost Effectiveness of Using {{Burn Area Reflectance Classification Maps}} for Wildfire Mitigation Decisions in a {{Burn Area Emergency Response}} Protocol},
  shorttitle = {A {{Value}} of {{Information}} Impact Assessment},
  author = {Bernknopf, R. and Kuwayama, Y. and Clifford, T. J. and Quayle, B. and Hardy, T. and Epting, J. and Gibson, R. and Goodrich, D. C.},
  year = {2018},
  month = dec,
  volume = {2018},
  pages = {NH23C-0858},
  urldate = {2023-04-17},
  abstract = {Wildfires impact human and natural systems. It is crucial that decisionmakers have the best information after a wildfire to assess post-fire conditions. Burn Area Emergency Response (BAER) is a protocol that outlines the process for developing and implementing an emergency stabilization plan to mitigate potential hazards to life, property and resources within and outside of the burned area. A BAER team determines the severity of the burn, identifies the potential post-wildfire outcomes, and prepares a response plan after wildfire containment. The use of Earth observations is beneficial to the post-fire response process. Satellite imagery provide a comprehensive assessment of pre- and post-fire land cover conditions and can be leveraged to quantify the magnitude of fire impacts to above ground biomass. Data analysis, modeling and information decision support tools are incorporated into understanding a fire's burn severity across the landscape, impacts to soils and watershed hydrologic function, and to determine response actions in the Stabilization Plan. In a retrospective impact assessment, the cost effectiveness of using Landsat data is estimated for producing and implementing a Burned Area Reflectance Classification (BARC) to map soil burn severity (SBS). Cost effectiveness analysis is one way to demonstrate the societal benefits of the satellite data. The case study is the 2013 Elk Complex Fire in the Boise National Forest, Idaho in which pre/post Landsat data were used to generate a BARC map and subsequently used to derive an SBS map. The scenario is compared to a counterfactual case in which satellite data and a BARC product is unavailable. For the 130,960 acre fire, 33,285 acres were mapped as high, 63,022 acres as moderate, and 26,845 acres as low SBS, respectively. Using the severity classifications, the BAER team can rate values at risk and prescribe and prioritize response actions. If satellite data are unavailable, a BARC map cannot be created. The BAER team must map SBS exclusively using field methods that are both time and resource intensive including exposure to potentially dangerous conditions. Ground and airborne observations are collected, processed, and georeferenced to assess post fire conditions and map SBS with less fidelity and consistency compared to satellite-based assessments.},
  keywords = {4313 Extreme events,NATURAL HAZARDS,NATURAL HAZARDSDE: 4322 Health impact,NATURAL HAZARDSDE: 4337 Remote sensing and disasters},
  annotation = {ADS Bibcode: 2018AGUFMNH23C0858B}

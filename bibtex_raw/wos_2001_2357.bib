@inproceedings{ WOS:000270972300075,
Author = {Huang, Meiling and Jiang, Hong},
Book-Group-Author = {IEEE},
Title = {The Spatial and Temporal Characteristics of Surface Ultraviolet
   Radiation and Total Ozone in Urban Agglomeration of Yangtze River Delta},
Booktitle = {2009 JOINT URBAN REMOTE SENSING EVENT, VOLS 1-3},

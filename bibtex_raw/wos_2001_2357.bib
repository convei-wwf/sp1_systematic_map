@article{ WOS:000957966200001,
Author = {Shirazi, Fatemeh Rahbar Alam and Shahbazi, Farzin and Rezaei, Hossein
   and Biswas, Asim},
Title = {Digital assessments of soil organic carbon storage using digital maps
   provided by static and dynamic environmental covariates},
Journal = {SOIL USE AND MANAGEMENT},
Year = {2023},

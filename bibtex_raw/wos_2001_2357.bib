@inproceedings{ WOS:000165245300008,
Author = {DiEsposti, R and Johansen, J},
Book-Group-Author = {IEEE
   IEEE},
Title = {Dual-use personal NavCom service},
Booktitle = {2000 IEEE AEROSPACE CONFERENCE PROCEEDINGS, VOL 1},

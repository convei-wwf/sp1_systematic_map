@article{ WOS:000732550100003,
Author = {Pavlova, V, E. and Krasnoryadtseva, O. M.},
Title = {Resource of Involvement as a Psychological Characteristic of the
   Correspondence Degree between a Person and the Educational Environment},
Journal = {SIBIRSKIY PSIKHOLOGICHESKIY ZHURNAL-SIBERIAN JOURNAL OF PSYCHOLOGY},
Year = {2021},

key={billa_avhrrdatarealtime_2005},
author={Billa, L. and Mansor, S. and Mahmud, A. R. and Ghazali, A. H.},
journal={Geo-Information For Disaster Management},
year={2005},
keywords={NA},
}

@ARTICLE{51,
